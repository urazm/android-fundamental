<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/star_full</item>
        <item name="android:secondaryProgressTint">@color/star_full</item>
        <item name="android:backgroundTint">@color/star_empty</item>
        <item name="android:progressBackgroundTint">@color/star_empty</item>
        <item name="android:numStars">5</item>
        <item name="android:rating">4</item>
        <item name="android:stepSize">0.1</item>
        <item name="android:isIndicator">true</item>
        <item name="android:scaleX">1.2</item> <!-- Уменьшение размера по оси X -->
        <item name="android:scaleY">1.2</item> <!-- Уменьшение размера по оси Y -->
    </style>
</resources>