<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/container_background_color"
    tools:context=".MovieDetailsActivity">

    <ImageView
        android:id="@+id/bg_image"
        android:src="@drawable/bg_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
    />
    <TextView
        android:id="@+id/age_limit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age_limit"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/bg_image"
        app:layout_constraintBottom_toBottomOf="@id/bg_image"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-light"
        android:layout_margin="12dp"
        />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/lable"
        app:layout_constraintTop_toTopOf="@+id/bg_image"

        />

</androidx.constraintlayout.widget.ConstraintLayout>